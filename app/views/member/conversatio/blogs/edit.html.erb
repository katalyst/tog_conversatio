<div class="titleB"><%= I18n.t('tog_conversatio.views.member.blogs.edit.edit_blog') %></div>

<%= error_messages_for :blog %>

<% form_for :blog, :url => member_conversatio_blog_path, :html => {:id => "settings", :method => "put"} do |f| -%>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <div class="actions"><%= submit_tag I18n.t('tog_conversatio.views.member.blogs.edit.update_blog'), {:class=>"button mainaction", :accesskey => "s"} %></div>
<% end -%>

<% content_for :sidebar do %>
  <%= render :partial => '/conversatio/blogs/tag_cloud_single_blog', :locals => { :blog => @blog } %>
<% end %>

<% content_for :sidebar_member do %>
  <%= render :partial => 'member/conversatio/blogs/manage', :locals => {:blog => @blog} %>
<% end %>
